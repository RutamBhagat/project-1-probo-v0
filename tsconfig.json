{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "lib": ["ES2022", "DOM"] // Make sure ES2022 is in the lib array
  },
  "include": ["src/**/*", "src/tests"],
  "exclude": ["node_modules", "dist"]
}
